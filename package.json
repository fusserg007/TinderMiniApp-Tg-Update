{
  "name": "@at-first-sight/root",
  "scripts": {
    "build": "cd tg-web-app && npm install && npm run build",
    "start": "node server.js",
    "start:landing": "node server.js",
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "deploy:timeweb": "docker-compose -f docker-compose.timeweb.yml up -d",
    "logs:timeweb": "docker-compose -f docker-compose.timeweb.yml logs -f"
  },
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "form-data": "^4.0.3",
    "mongodb": "^6.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
{
  "name": "@at-first-sight/root",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "dev-local": "concurrently \"cd backend && npm run dev\" \"cd tg-web-app && npm run dev\""
  },
  "type": "module",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

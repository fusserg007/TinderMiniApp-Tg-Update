{
  "name": "tinder-mini-app",
  "version": "1.0.0",
  "description": "Tinder Mini App for Telegram",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"cd backend && npm run dev\" \"npm run dev:frontend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc && vite build",
    "build:backend": "cd backend && npm run build",
    "start": "node server.js",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install",
    "clean": "rm -rf dist node_modules backend/node_modules backend/dist",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.timeweb.yml up -d",
    "docker:logs": "docker-compose -f docker-compose.timeweb.yml logs -f"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.28.4",
    "@vitejs/plugin-react": "^4.3.4",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "vite": "^5.4.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
